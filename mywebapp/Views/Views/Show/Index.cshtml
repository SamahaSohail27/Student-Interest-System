}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Student Data</title>
    <style>
        /* Add custom styles for positioning pagination controls */
        .pagination-container {
            display: flex;
            justify-content: flex-end;
            margin-top: 10px;
        }

        .pagination {
            margin: 0;
        }
        .pagination-container {
            display: flex;
            justify-content: flex-end;
            margin-top: 10px;
        }

        .pagination {
            margin: 0;
        }

        /* Styles for modal */
        #editStudentModal {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
        }

        .modal-content {
            background-color: #fff;
            margin: 10% auto;
            padding: 20px;
            border: 1px solid #888;
            width: 80%;
        }

        .close {
            color: #aaa;
            float: right;
            font-size: 28px;
            font-weight: bold;
            cursor: pointer;
        }

            .close:hover,
            .close:focus {
                color: black;
                text-decoration: none;
                cursor: pointer;
            }

    </style>

</head>
<body>

    <div class="container mt-5">
        <h2 class="mb-4">Student Data</h2>

        <!-- Pagination Controls -->
        <div class="pagination-container">
            <nav aria-label="Page navigation">
                <ul class="pagination">
                    <li class="page-item">
                        <a class="page-link" href="#" aria-label="First" data-page="1">
                            <span aria-hidden="true">&laquo;&laquo;</span>
                        </a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="#" aria-label="Previous" data-page="1">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>
                    <li class="page-item"><a class="page-link" href="#" data-page="1">1</a></li>
                    <li class="page-item"><a class="page-link" href="#" data-page="2">2</a></li>
                    <!-- Add more page numbers as needed -->
                    <li class="page-item">
                        <a class="page-link" href="#" aria-label="Next" data-page="2">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="#" aria-label="Last" data-page="last">
                            <span aria-hidden="true">&raquo;&raquo;</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>


        <table class="table" id="studentTable">
            <thead>
                <tr>
                    <th class="font-weight-bold" >Student ID</th>
                    <th class="font-weight-bold" >Full Name</th>
                    <th class="font-weight-bold" >Email Address</th>
                    <th class="font-weight-bold" >Gender</th>
                    <th class="font-weight-bold" >Date of Birth</th>
                    <th class="font-weight-bold" >City</th>
                    <th class="font-weight-bold" >Interest</th>
                    <th class="font-weight-bold" >Degree </th>
                    <th class="font-weight-bold">Action</th>
                    <!-- Add more columns as needed -->
                </tr>
            </thead>
            <tbody>
                <!-- Add table rows for students -->
            </tbody>
        </table>
    </div>
    <div id="studentFormContainer" class="container mt-5" style="display: none;">
        @Html.Partial("st_p")
    </div>
</body>
</html>
